<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.techsupportscheduler.support.dao.LoginDao">

    <select id="findByLoginId" resultType="com.boot.techsupportscheduler.support.vo.User">
        SELECT
        user_id       AS userId,
        login_id      AS loginId,
        password_hash AS passwordHash,
        role          AS role
        FROM users
        WHERE login_id = #{loginId}
    </select>

</mapper>
